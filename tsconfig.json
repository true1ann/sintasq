{
    "compilerOptions": {
        "target": "es6",
        "module": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"  // Change this to match your directory structure
    ],
    "exclude": [
        "node_modules"
    ]
}
